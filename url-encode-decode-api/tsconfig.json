{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext"],
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "src/__tests__"]
}
